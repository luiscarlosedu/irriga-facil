generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model log_register {
  id         Int      @id @default(autoincrement())
  umidade    Int
  data_hora  DateTime? @default(now())
}

model leitura {
  id         Int      @id @default(autoincrement())
  valor      Int
  data_hora  DateTime? @default(now())
}

model config {
  id              Int @id
  tempo_segundos  Int @default(30)
  tempo_ligado    Int @default(5)
}

model current_moisture {
  id         Int      @id @default(autoincrement())
  umidade    Int
  data_hora  DateTime @default(now())
}